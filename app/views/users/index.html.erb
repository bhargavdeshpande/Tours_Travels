<p id="notice"><%= notice %></p>

<h1>Users</h1>
<h4>Note: Role Type: Customer(1), Agent(2), Admin(3)</h4>
<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role%></td>
        <td><%= button_to 'Edit Profile', edit_user_path(user), method: :get %></td>
        <td><%= button_to 'Delete Profile', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
