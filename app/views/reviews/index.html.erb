<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Tour name</th>
      <th>Tour Subject</th>
      <th>Tour review</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.tourname %></td>
        <td><%= review.subject %></td>
        <td><%= review.tourReview %></td>
        <td><%= button_to 'Show', review, method: :get %></td>
        <td><%= button_to 'Edit', edit_review_path(review), method: :get %></td>
        <td><%= button_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
