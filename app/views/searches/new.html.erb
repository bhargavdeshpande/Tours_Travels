<div>
  <% if flash[:notice] %>
    <p id = "notice"> <%= flash[:notice] %></p>
  <%end %>
</div>

<h1>New Search</h1>
<div>

  <%=form_tag do %>
    <fieldset>
      <legend>Search</legend>
      <div>
        <%= label_tag :price, 'Price' %>
        <%= text_field_tag :price, params[:price] %>
        <br>
        <%= label_tag :tourname, 'Tourname' %>
        <%= text_field_tag :tourname, params[:tourname] %>
        <br>
        <%= label_tag :state, 'State' %>
        <%= text_field_tag :state, params[:state] %>
        <br>
        <%= label_tag :country, 'Country' %>
        <%= text_field_tag :country, params[:country] %>
        <br>
        <%= label_tag :sdate, 'Start Date' %>
        <%= text_field_tag :sdate, params[:sdate] %>
        <br>
        <%= label_tag :availableSeats, 'Available Seats' %>
        <%= text_field_tag :availableSeats, params[:availableSeats] %>
        <br>
      </div>
      <div>
        <%= submit_tag "Search" %>
      </div>
      <br>

    </fieldset>
  <% end %>
</div>
<br>
